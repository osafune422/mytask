<!DOCTYPE html>
<html>
   <body>
        <div id="wrapper" class="clearfix">
            <!-- 左カラム　開始 -->
            <div id="leftColumn">
                <hr class=straghtline>
                <h3>登録情報変更</h3>
                <hr class=dotline>
                
                <% @worker.errors.full_messages.each do |message| %>
                    <div class="form-error">
                        <%= message %>
                    </div>
                <% end %>
                
                <%= form_tag("/workers/#{@worker.id}/update", {multipart: true}) do %>
                    <p>名前</p>
                    <input class=signup name="name" value="<%= @worker.name %>">
                    <p>ニックネーム</p>
                    <input class=signup name="nickname" value="<%= @worker.nickname %>">
                    <p>メールアドレス</p>
                    <input class=signup name="email" placeholder="me@example.com" value="<%= @worker.email %>">
                    <p>パスワード</p>
                    <input class=signup name="password" placeholder="********" value="<%= @worker.password %>" type="password">
                    <p>顔写真</p>
                    <input type = "file" name = "avator"><br>
                    
                    <% if @current_worker.status == "master" %>
                        <select name="status" value="<%= @worker.status %>" required>
                            <option value="カメラマン">staff</option>
                            <option value="master">master</option>
                        </select>
                    <% end %>
                    <br>
                    <input class="button_signup" type="submit" value="変更">
                <% end %>
            </div>
            <!-- 左カラム　終了 -->
        
            <!-- 右カラム　開始 -->
            <div id="rightColumn">
                右ナビエリア
            </div>
            <!-- 右カラム　終了 -->
        </div>
      
      
      
      
  </body>